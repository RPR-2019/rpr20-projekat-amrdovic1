<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RPRMovieApp.controllers.ReservationPaymentController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Please choose the payment method:" />
      <ButtonBar prefHeight="84.0" prefWidth="432.0" GridPane.rowIndex="1">
         <buttons>
            <RadioButton fx:id="cinemaCard" mnemonicParsing="false" onAction="#cinemaCardClick" text="CinemaCard" />
            <RadioButton fx:id="creditCard" mnemonicParsing="false" onAction="#creditCardClick" text="Credit Card" />
            <RadioButton fx:id="cash" mnemonicParsing="false" onAction="#cashClick" text="Cash (on the spot)" />
         </buttons>
      </ButtonBar>
      <Label fx:id="errorText" textFill="RED" GridPane.rowIndex="4" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="5">
        <buttons>
          <Button mnemonicParsing="false" text="Cancel" />
            <Button fx:id="finishBtn" defaultButton="true" mnemonicParsing="false" onAction="#finishClick" text="Finish" />
        </buttons>
      </ButtonBar>
   </children>
</GridPane>
