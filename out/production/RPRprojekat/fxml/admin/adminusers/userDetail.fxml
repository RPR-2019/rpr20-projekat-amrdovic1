<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RPRMovieApp.controllers.admin.adminusers.UserDetailController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label fx:id="mainMessage" text="You are currently viewing user:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label text="User information:" GridPane.rowIndex="1" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="4">
        <buttons>
          <Button mnemonicParsing="false" text="Go back" />
            <Button fx:id="deleteUserBtn" mnemonicParsing="false" onAction="#deleteUser" text="Delete User" />
        </buttons>
      </ButtonBar>
      <TextArea fx:id="userInfo" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2" />
   </children>
</GridPane>
